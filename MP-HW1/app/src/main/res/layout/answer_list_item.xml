<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:id="@+id/answerItemCardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/textStudentOfTheClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Student Name"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textStudentOfTheClassScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Score"
            android:layout_below="@+id/textStudentOfTheClassName"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/studentImageBackground"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/textStudentOfTheClassScore"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_student_background" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>